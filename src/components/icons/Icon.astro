---
/**
 * Icon Component
 * Centralized icon imports from lucide-astro
 * Icons are organized by category for maintainability
 */

// === UI General ===
import {
  Layers,
  Zap,
  CheckCircle,
  Clock,
  Eye,
  Moon,
  Calendar,
  Settings,
  RefreshCw,
  LayoutGrid,
  Code2,
  BookOpen,
  ShieldCheck,
  ShieldAlert,
  GitMerge,
  ClipboardList,
  Workflow,
  MonitorSmartphone,
} from 'lucide-astro';

// === Case Studies ===
import {
  FileJson2,
  BrainCircuit,
  ZapOff,
  MoonStar,
  Shapes,
  FileStack,
  Unplug,
  BookX,
} from 'lucide-astro';

// Icon map: kebab-case name â†’ Component
const icons: Record<string, any> = {
  // UI General
  'layers': Layers,
  'zap': Zap,
  'check-circle': CheckCircle,
  'clock': Clock,
  'eye': Eye,
  'moon': Moon,
  'calendar': Calendar,
  'settings': Settings,
  'refresh-cw': RefreshCw,
  'layout-grid': LayoutGrid,
  'code-2': Code2,
  'book-open': BookOpen,
  'shield-check': ShieldCheck,
  'shield-alert': ShieldAlert,
  'git-merge': GitMerge,
  'clipboard-list': ClipboardList,
  'workflow': Workflow,
  'monitor-smartphone': MonitorSmartphone,

  // Case Studies
  'file-json-2': FileJson2,
  'brain-circuit': BrainCircuit,
  'zap-off': ZapOff,
  'moon-star': MoonStar,
  'shapes': Shapes,
  'file-stack': FileStack,
  'unplug': Unplug,
  'book-x': BookX,
};

interface Props {
  name: string;
  size?: number;
  class?: string;
  strokeWidth?: number;
}

const { name, size = 24, class: className = '', strokeWidth = 2 } = Astro.props;
const IconComponent = icons[name];
---

{IconComponent && (
  <IconComponent
    size={size}
    class={className}
    stroke-width={strokeWidth}
  />
)}
