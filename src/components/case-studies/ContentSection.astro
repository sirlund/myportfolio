---
interface Props {
  title?: string;
  label?: string;
  width?: 'default' | 'wide';
  centered?: boolean;
  titleSize?: 'default' | 'small';
  class?: string;
}

const {
  title,
  label,
  width = 'default',
  centered = false,
  titleSize = 'default',
  class: className = ''
} = Astro.props;
---

<section class:list={['content-section', { wide: width === 'wide' }, className]}>
  <div class="container">
    {(label || title) && (
      <div class:list={['header', { centered }]}>
        {label && <span class="label">{label}</span>}
        {title && <h2 class:list={['title', { 'title-small': titleSize === 'small' }]}>{title}</h2>}
      </div>
    )}
    <div class="content">
      <slot />
    </div>
  </div>
</section>

<style>
  .content-section {
    margin-bottom: var(--space-32, 8rem);
  }

  @media (width >= 64rem) {
    .content-section {
      margin-bottom: var(--space-48, 12rem);
    }
  }

  .container {
    margin-left: auto;
    margin-right: auto;
    padding-left: var(--space-6);
    padding-right: var(--space-6);
    max-width: 64rem;
  }

  @media (width >= 64rem) {
    .container {
      padding-left: var(--space-8);
      padding-right: var(--space-8);
    }
  }

  .content-section.wide .container {
    max-width: var(--container-6xl, 72rem);
  }

  .header {
    margin-bottom: var(--space-12);
  }

  @media (width >= 64rem) {
    .header {
      margin-bottom: var(--space-16);
    }
  }

  .header.centered {
    text-align: center;
  }

  .label {
    display: block;
    font-size: var(--font-small);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .title {
    margin: 0;
    font-size: var(--font-3xl, 1.875rem);
    font-weight: var(--font-weight-bold);
    line-height: 1.2;
  }

  @media (width >= 64rem) {
    .title {
      font-size: var(--font-display, 3rem);
    }
  }

  .title-small {
    font-size: var(--font-2xl, 1.5rem);
  }

  @media (width >= 64rem) {
    .title-small {
      font-size: var(--font-3xl, 1.875rem);
    }
  }

  .content {
    color: var(--color-text-secondary);
    line-height: 1.625;
  }

  .content :global(p) {
    font-size: var(--font-lg);
    margin-bottom: var(--space-6);
  }

  .content :global(p:last-child) {
    margin-bottom: 0;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: var(--space-6) 0;
    padding-left: var(--space-8);
  }

  .content :global(li) {
    margin-bottom: var(--space-3);
  }

  .content :global(strong) {
    color: var(--color-text-primary);
    font-weight: var(--font-weight-bold);
  }

  .content :global(em) {
    font-style: italic;
  }
</style>
