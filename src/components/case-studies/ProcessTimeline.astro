---
interface Step {
  title: string;
  description: string;
}

interface Props {
  steps: Step[];
}

const { steps } = Astro.props;
---

<div class="timeline">
  {steps.map((step) => (
    <div class="step">
      <div class="step-title">
        <h4 set:html={step.title} />
      </div>
      <div class="step-description" set:html={step.description} />
    </div>
  ))}
</div>

<style>
  .timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
    margin-top: var(--space-12);
  }

  .step {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--color-border);
  }

  .step:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  @media (width >= 64rem) {
    .step {
      grid-template-columns: 1fr 2fr;
      gap: var(--space-12);
    }
  }

  .step-title h4 {
    margin: 0;
    font-size: var(--font-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    line-height: 1.4;
  }

  @media (width >= 64rem) {
    .step-title h4 {
      font-size: var(--font-2xl);
    }
  }

  .step-description {
    font-size: var(--font-body);
    line-height: 1.625;
    color: var(--color-text-secondary);
  }

  @media (width >= 64rem) {
    .step-description {
      font-size: var(--font-lg);
    }
  }

  .step-description :global(p) {
    margin-bottom: var(--space-4);
  }

  .step-description :global(p:last-child) {
    margin-bottom: 0;
  }

  .step-description :global(strong) {
    color: var(--color-text-primary);
    font-weight: var(--font-weight-semibold);
  }
</style>
