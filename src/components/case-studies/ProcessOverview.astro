---
interface ProcessPhase {
  title: string;
  items: string[];
}

interface Props {
  title?: string;
  phases: ProcessPhase[];
  bottomLabel?: string;
}

const { title = "Process Overview", phases, bottomLabel } = Astro.props;
---

<div class="process-overview">
  {title && <h3 class="title">{title}</h3>}

  <!-- Timeline bar with dots -->
  <div class="timeline-bar">
    <div class="timeline-line" />
    {phases.map(() => (
      <div class="dot" />
    ))}
  </div>

  <!-- Phase content -->
  <div class="phases">
    {phases.map((phase) => (
      <div class="phase">
        <h4 class="phase-title">{phase.title}</h4>
        <ul class="phase-items">
          {phase.items.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>

  {bottomLabel && <div class="bottom-label">{bottomLabel}</div>}
</div>

<style>
  .process-overview {
    background-color: var(--color-bg-secondary);
    padding: var(--space-10) var(--space-8);
    border-radius: var(--radius-xl);
    margin: var(--space-12) 0;
  }

  @media (width >= 64rem) {
    .process-overview {
      padding: var(--space-12) var(--space-16);
    }
  }

  .title {
    font-size: var(--font-lg);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-8);
    color: var(--color-text-primary);
    text-align: center;
  }

  @media (width >= 64rem) {
    .title {
      font-size: var(--font-xl);
      margin-bottom: var(--space-10);
    }
  }

  /* Timeline bar */
  .timeline-bar {
    display: none;
  }

  @media (width >= 48rem) {
    .timeline-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
      margin-bottom: var(--space-6);
      padding: 0 var(--space-12);
    }
  }

  .timeline-line {
    position: absolute;
    left: var(--space-12);
    right: var(--space-12);
    top: 50%;
    height: 2px;
    background-color: var(--color-text-primary);
    transform: translateY(-50%);
  }

  .dot {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background-color: var(--color-bg-secondary);
    border: 2px solid var(--color-text-primary);
    position: relative;
    z-index: 1;
  }

  .dot::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--color-text-primary);
  }

  /* Phases grid */
  .phases {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
  }

  @media (width >= 48rem) {
    .phases {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-6);
    }
  }

  .phase {
    display: flex;
    flex-direction: column;
  }

  /* Mobile: show dot before title */
  @media (width < 48rem) {
    .phase::before {
      content: '';
      width: 14px;
      height: 14px;
      border-radius: 50%;
      background-color: var(--color-bg-secondary);
      border: 2px solid var(--color-text-primary);
      margin-bottom: var(--space-3);
      position: relative;
    }

    .phase::after {
      content: '';
      position: absolute;
      top: 5px;
      left: 5px;
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background-color: var(--color-text-primary);
    }
  }

  .phase-title {
    margin: 0 0 var(--space-3);
    font-size: var(--font-small);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (width >= 64rem) {
    .phase-title {
      font-size: var(--font-sm);
    }
  }

  .phase-items {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  .phase-items li {
    font-size: var(--font-sm);
    color: var(--color-text-secondary);
    line-height: 1.5;
    position: relative;
    padding-left: var(--space-4);
  }

  .phase-items li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-text-primary);
  }

  .bottom-label {
    margin-top: var(--space-8);
    padding-top: var(--space-6);
    border-top: 1px dashed var(--color-border-default);
    text-align: center;
    font-size: var(--font-small);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: var(--font-weight-medium);
  }

  @media (width >= 64rem) {
    .bottom-label {
      margin-top: var(--space-10);
    }
  }
</style>
