---
import { ViewTransitions } from 'astro:transitions';
import CustomCursor from '@/components/CustomCursor.astro';
import '@/styles/tokens.css';
import '@/styles/globals.css';

interface Props {
  title: string;
  description: string;
  lang?: 'en' | 'es';
  canonicalPath?: string;
}

const {
  title,
  description,
  lang = 'en',
  canonicalPath
} = Astro.props;

const siteUrl = 'https://nlund.in';
const canonicalUrl = canonicalPath ? `${siteUrl}${canonicalPath}` : siteUrl;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="author" content="Nicolás Lundin" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Nicolás Lundin Portfolio" />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" rel="stylesheet" />

    <!-- View Transitions -->
    <ViewTransitions />
  </head>

  <body>
    <CustomCursor />
    <slot />
  </body>
</html>

<style is:global>
  /* View Transitions animations */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
  }

  @keyframes slideInFromBottom {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  ::view-transition-old(root) {
    animation: fadeOut 0.2s ease-out;
  }

  ::view-transition-new(root) {
    animation: fadeIn 0.3s ease-out;
  }

  /* Entrance animations for sections */
  [data-animate] {
    animation: slideInFromBottom 0.6s ease-out both;
  }

  [data-animate-delay="0.2"] { animation-delay: 0.2s; }
  [data-animate-delay="0.4"] { animation-delay: 0.4s; }
  [data-animate-delay="0.6"] { animation-delay: 0.6s; }
  [data-animate-delay="0.8"] { animation-delay: 0.8s; }
</style>
